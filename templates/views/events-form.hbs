<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="../../style/style.css">

    <title>Tj Start RK - Calendář</title>
</head>
<body>
<main id="content">
    {{>header}}
    <form action="" method="post">
        <h2>Nová akce</h2>
        <br>
        <label for="description">Název akce:</label> <br>
        <input type="text" name="description" id="description"  required
                  placeholder="Zadejte název akce ">
        <br>
        <div>
            <label>Start:</label> <br>
            <input type="datetime-local" id="start" name="start" required>
            <br>
            <label>Konec:</label> <br>
            <input type="datetime-local" id="end" name="end" required>
            <br>
        </div>
        <button type="submit">Uložit</button>
    </form>
    <div id="table-list">
    <table id="events_table">
        <tr>
            <th>Název</th>
            <th>Start</th>
            <th>Konec</th>
            <th></th>
            <th></th>
        </tr>
        {{#each events}}
            <tr>
                <td id="in">
                    {{this.title}}
                </td>
                <td id="in">
                    {{this.start}}
                </td>
                <td id="in">
                    {{this.end}}
                </td>
                <td id="update_table">
                    <a id="update_table" href="/event/{{this.id}}/update">Upravit</a>
                </td>
                <td id="delete-table">
                    <a id="delete-table" href="/event/{{this.id}}/delete">Odstranit</a>
                </td>
            </tr>
        {{/each}}
    </table>
    </div>
</main>

{{>footer}}
</body>
<script>
    function myFunction() {
        var x = document.getElementById("myTopnav");
        if (x.className === "topnav") {
            x.className += " responsive";
        } else {
            x.className = "topnav";
        }
    };
</script>
</html>